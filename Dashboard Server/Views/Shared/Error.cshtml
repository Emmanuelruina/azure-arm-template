@using System.Reflection
@using Syncfusion.Server.Base.Logger
@model HandleErrorInfo
@{
    ViewBag.Title = "[[[Internal Server Error]]]";
    ViewBag.MessageBox = false;
    LogExtension.LogError(HttpContext.Current.Request.Url.ToString(), "Application Error ", Model.Exception, MethodBase.GetCurrentMethod());
}

@section scripts{
    @Scripts.Render("~/bundles/scripts/bootstrapjs")
}

@section MainSection{
    <h2>[[[Internal Server Error]]]</h2>
  
    <div class="hidden">
        <hgroup class="title">
            <h1 class="error">[[[Error.]]]</h1>
            <h2 class="error">[[[An error occurred while processing your request.]]]</h2>
        </hgroup>

        <p>[[[Controller:]]] @Model.ControllerName</p>
        <p>[[[Action:]]] @Model.ActionName</p>
        <p>[[[Exception:]]] @Model.Exception</p>
    </div>
}